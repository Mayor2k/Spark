<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/artistArea"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/artistCover"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/ic_artist_black_24dp" />

    <LinearLayout
        android:id="@+id/colorArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#beceda"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/artistTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="Linkin park"
            android:ellipsize="end"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="17sp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/artistInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="3 album 13 song"
            android:ellipsize="end"
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>