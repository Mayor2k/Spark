<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_player"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mayor2k.spark.UI.Fragments.BottomPlayerFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progress="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_player_chevron_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:tint="@color/black"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_chevron_up_24" />

        <TextView
            android:id="@+id/bottom_player_song_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:gravity="start|center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Talking to Myself"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/bottom_player_play"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:background="@color/transparent"
            app:srcCompat="@drawable/ic_play_black_24dp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</LinearLayout>